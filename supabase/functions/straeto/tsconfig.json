{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"], // Include DOM for fetch, URL etc.
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true, // Supabase handles compilation
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Add Deno types
    "types": ["https://deno.land/x/deno/types/stable.d.ts"] 
  },
  "include": ["./**/*.ts"], // Include all ts files in this directory
  "exclude": ["node_modules"]
}